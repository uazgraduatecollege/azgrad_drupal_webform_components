/**
 * Get a list of all terms.
 */
function azgrad_drupal_webform_components_webform_options_azgrad_terms_all_alter(
  array &$options,
  array &$element,
) {
  azgrad_drupal_webform_components_get_options(
    $options,
    'https://cloud.grad.arizona.edu/data/directory/terms.json',
    'azgrad_terms_all',
    function (array $response) {
      $terms = [];
      foreach ($response as $next_term) {
        if (!empty($next_term['term']) && $next_term['term'] != '1011') {
          $terms[$next_term['term']] = $next_term['descr'];
        }
      }
      ksort($terms, SORT_NUMERIC);

      return $terms;
    }
  );
}

/**
 * Get a list of current and future terms.
 */
function azgrad_drupal_webform_components_webform_options_azgrad_terms_current_future_alter(
  array &$options,
  array &$element,
) {
  azgrad_drupal_webform_components_get_options(
    $options,
    'https://cloud.grad.arizona.edu/data/directory/terms.json',
    'azgrad_terms_current_future',
    function (array $response) {
      $terms = [];
      $now = time();

      foreach ($response as $next_term) {
        $term_end = strtotime($next_term['endDate']);
        if (!empty($next_term['term']) && ($term_end >= $now)) {
          $terms[$next_term['term']] = $next_term['descr'];
        }
      }
      ksort($terms, SORT_NUMERIC);

      return $terms;
    }
  );
}

/**
 * Get a list of campuses.
 */
function azgrad_drupal_webform_components_webform_options_azgrad_campuses_alter(
  array &$options,
  array &$element,
) {
  azgrad_drupal_webform_components_get_options(
    $options,
    'https://cloud.grad.arizona.edu/data/directory/campuses.json',
    'azgrad_campuses',
    function (array $response) {
      $campuses = [];
      foreach ($response as $next_campus) {
        if (!empty($next_campus['campus']) && !empty($next_campus['descr'])) {
          $campuses[$next_campus['campus']] = $next_campus['descr'];
        }
      }
      asort($campuses);

      return $campuses;
    }
  );
}

