/**
 * Query the remote data endpoint.
 */
function azgrad_drupal_webform_components_get_options(
  array &$options,
  string $url,
  string $cache_key,
  Closure $filter_callback,
) {
  // Load cached options.
  if ($cache = \Drupal::cache()->get($cache_key)) {
    $options = $cache->data;

    return;
  }

  $response = json_decode(file_get_contents($url), TRUE);

  if (!$response) {
    $response = [];
  }

  $filtered_response = $filter_callback($response);
  $options = $filtered_response;
  \Drupal::cache()->set($cache_key, $options);
}
